<% provide(:title, 'ログイン画面') %>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="list-group">
          <h1>ログイン</h1>

          <%= form_for(:session, url: login_path) do |f| %>
            <%= f.label :email, 'アドレス' %>
            <div class="form-group"><%= f.email_field :email, calss: 'form_control' %> </div>
            <%= f.label :password, 'パスワード' %>
            <div class="form-group"><%= f.password_field :password, calss: 'form_control' %></div>
            <%= f.submit 'ログイン' %>
          <% end %>

            <p>登録はまだですか? <%= link_to "新規登録", signup_path %></p>
      </div>
    </div>
  </div>
</div>


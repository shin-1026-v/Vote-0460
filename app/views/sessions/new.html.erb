<% provide(:title, 'ログイン画面') %>
<h1>ログイン</h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>

    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, 'アドレス' %>
      <%= f.email_field :email, calss: 'form_control' %>

      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, calss: 'form_control' %>

      <%= f.submit 'ログイン' %>

    <% end %>

    <p>登録はまだですか? <%= link_to "新規登録", signup_path %></p>
  </div>
</div>

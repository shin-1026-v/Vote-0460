<% provide(:title, 'ログイン画面') %>

<h1>ログイン</h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>

  <%= form_for(:session, url: login_path) do |f| %>

    <p>
    <%= f.label :email, 'アドレス' %>
    <%= f.email_field :email, calss: 'form_control' %>
    </p>

    <p>
    <%= f.label :password, 'パスワード' %>
    <%= f.email_field :password, calss: 'form_control' %>
    </p>

    <p>
    <%= f.submit 'ログイン' %>
    </p>

  <% end %>
   </div>
</div>

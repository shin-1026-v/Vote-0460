<% if @alredy_answer %>
  <button type="button" class="btn btn-primary">賛成</button><%= @answer_set_count %>
  <button type="button" class="btn btn-warning">反対</button><%= @non_answer_count %>
<% else %>
  <%= link_to "賛成", answer_sets_create_agree_path(@news_topics), method: :post, class: "btn btn-primary btn-lg center-block" %>
  <%= link_to "反対", answer_sets_create_non_agree_path(@news_topics), method: :post, class: "btn btn-danger btn-lg center-block" %>
<% end %>


<%= form_for(current_user.active_relationships.build, remote: true) do |f| %>
  <div><%= hidden_field_tag :followed_id, @user.id %></div>
  <%= f.submit "Follow", class: "btn btn-primary" %>
<% end %>

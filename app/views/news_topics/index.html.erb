<% provide(:title, 'ニュース一覧') %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="news-list-container">
        <p class="page-title">ニュース 一覧ページ</p>
        <% @news_topics.each do |n| %>
          <p class="news-title">
            <%= n.title %>
            <% if logged_in? && current_user.admin? %>
              <%= link_to "記事を読む",  news_topic_path(n.id) %>
              <%= link_to "削除", news_topic_path(n.id), method: :delete,data: { confirm: "削除しますか?" } %>
            <% elsif logged_in? %>
              <%= link_to "記事を読む",  news_topic_path(n.id) %>
            <% else %>
              <%= link_to "ログイン",  login_path %>
            <% end %>
          </p>
        <% end %>
        <%= link_to "戻る", root_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>

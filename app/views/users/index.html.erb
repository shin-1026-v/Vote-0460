<% provide(:title, 'ユーザー一覧') %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="user-list-container">
        <h1 class="page-title-u">ユーザー一覧</h1>
        <ul class="users-list">
          <% @users.each do |user| %>
            <li class="user-n">
              <%= link_to user.name, user %>
              <% if current_user.admin? && !current_user?(user) %>
                | <%= link_to "削除", user, method: :delete,data: { confirm: "削除しますか?" } %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<% provide(:title, 'ユーザー一覧') %>

<h1>ユーザー一覧</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
    </li>
    <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to "削除", user, method: :delete,data: { confirm: "削除しますか?" } %>
    <% end %>
  <% end %>
</ul>